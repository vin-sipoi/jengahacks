# ============================================
# JengaHacks 2026 - Environment Variables
# ============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ============================================
# Required Variables
# ============================================

# Supabase Configuration
# Get these from: https://app.supabase.com → Project Settings → API
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_PUBLISHABLE_KEY=your-anon-public-key-here

# Google reCAPTCHA
# Get site key from: https://www.google.com/recaptcha/admin
# Required for production, optional for development
VITE_RECAPTCHA_SITE_KEY=your-recaptcha-site-key-here

# ============================================
# Optional Variables
# ============================================

# Edge Functions
# Set to "true" to enable IP-based rate limiting (requires Edge Functions deployed)
VITE_USE_REGISTRATION_EDGE_FUNCTION=true

# Google Analytics
# Get from: https://analytics.google.com → Admin → Data Streams
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GA_ENABLED=false

# Sentry Error Tracking
# Get DSN from: https://sentry.io → Settings → Projects → Client Keys (DSN)
VITE_SENTRY_DSN=https://c97ecce9c0ad10a5af3b065e2559ab61@o4510575021719552.ingest.us.sentry.io/4510575024209920
# Set to "true" to enable Sentry error tracking (defaults to false for privacy)
VITE_SENTRY_ENABLED=false
# Set to "true" to send PII (Personally Identifiable Information) to Sentry
# WARNING: Only enable if you have user consent and comply with privacy regulations
VITE_SENTRY_SEND_PII=false
# Optional: Release version for tracking (e.g., "1.0.0", "v1.2.3")
VITE_SENTRY_RELEASE=
# Set to "true" to enable Sentry in development mode (defaults to false)
VITE_SENTRY_ENABLE_IN_DEV=false

# Admin Portal
# SECURITY: Admin authentication is handled via Supabase Auth (see AdminAuth.tsx)
# VITE_ADMIN_PASSWORD is deprecated and should not be used
# If you need password-based auth, use Edge Function secrets (ADMIN_PASSWORD) instead
# VITE_ADMIN_PASSWORD=deprecated-do-not-use

# Social & Community
VITE_DISCORD_URL=https://discord.gg/4qaZGnYe

# Internationalization
# Options: "en" (English), "sw" (Swahili)
VITE_LOCALE=en
# IANA timezone identifier (e.g., "Africa/Nairobi", "UTC")
VITE_TIMEZONE=Africa/Nairobi

# Blog Configuration (optional)
# API endpoint for blog posts (JSON format)
VITE_BLOG_API_URL=
# RSS feed URL (e.g., Medium, WordPress)
VITE_BLOG_RSS_URL=
# CORS proxy for RSS feeds (if needed)
VITE_RSS_PROXY_URL=

# ============================================
# Server-Side Variables (Edge Functions)
# ============================================
# These are set via Supabase CLI or Dashboard, NOT in .env
# 
# Set via CLI:
#   supabase secrets set RECAPTCHA_SECRET_KEY=your-secret-key
#   supabase secrets set ADMIN_PASSWORD=your-password
#
# Or via Dashboard:
#   Project Settings → Edge Functions → Secrets
#
# RECAPTCHA_SECRET_KEY - reCAPTCHA secret key (from Google reCAPTCHA Admin)
# ADMIN_PASSWORD - Admin password for protected endpoints
# SUPABASE_URL - Auto-provided by Supabase
# SUPABASE_SERVICE_ROLE_KEY - Auto-provided by Supabase
